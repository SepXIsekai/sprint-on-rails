<p style="color: green"><%= notice %></p>
<div class="flex flex-col font-bold text-xl">
  <% content_for :title, "Articles" %>
  <h1>Articles</h1>
  <div class="flex flex-col">
    <div id="articles">
      <% @articles.each do |article| %>
        <%= render article %>
        <p>
          <%= link_to "Show this article", [:admin , article] ,class: "flex justify-center btn"%>
        </p>
      <% end %>
    </div>
    <%= link_to "New article", new_admin_article_path ,class: "mt-5 btn"%>
  </div>
</div>