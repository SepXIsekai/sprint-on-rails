<div class="flex flex-col font-bold text-xl w-full">
  <p class="text-green-500 font-rg"><%= notice %></p>
  <% content_for :title, "Articles" %>
  <h1>Articles</h1>
  <%= link_to "New article", new_admin_article_path ,class: "mt-5 my-5  text-white btn btn-neutral w-fit"%>

  <div class="flex flex-col gap-4">
    <div id="articles">
      <% @articles.each do |article| %>
        <%= render article %>
        <p class="mb-8">
          <%= link_to "Show this article", [:admin , article] ,class: "flex justify-center btn btn-primary"%>
        </p>
      <% end %>
    </div>
  </div>
</div>