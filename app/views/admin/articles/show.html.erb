<div class="flex flex-col gap-4 w-full">
  <%= link_to "← Back to Articles", admin_articles_path, class: "w-fit text-red-400 cursor-pointer hover:text-red-600", style: "width: fit-content;" %>

  <div class="font-bold text-xl">
    <% content_for :title, "Article Details" %>
    <h1>Article Details</h1>
  </div>

  <div class="text-green-500 font-semibold mb-4"><%= notice %></div>

  <%= render @article %>

  <div class="flex items-center gap-4 text-sm justify-end">
    <%= button_to "Delete", admin_article_path(@article), 
        method: :delete, 
        class: "px-4 py-2 border rounded-md shadow cursor-pointer transition",
        data: { confirm: "Are you sure you want to delete this article?" }, 
        style: "background-color: red; color: white; border: transparent; "%>

    <%= link_to "Edit Article", edit_admin_article_path(@article),
        class: "px-4 py-2 bg-primary text-white rounded-md shadow hover:bg-primary/80 transition" %>
  </div>
</div>
<br>